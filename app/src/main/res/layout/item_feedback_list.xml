<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_marginRight="@dimen/margin_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/feedback_item_time"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="18dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#999999"
                android:layout_height="wrap_content"
                android:text="2017-10-30 14:24:20" />
            <TextView
                android:id="@+id/feedback_item_stataus"
                android:text="已退票"
                android:layout_marginTop="18dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/listitemt"
                android:textColor="#eb5e3a"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="61dp"
                android:layout_height="26dp" />
        </LinearLayout>
        <LinearLayout
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="【问】"
                android:textSize="15dp"
                android:textColor="#eb5e3a"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/feedback_item_suggestion"
                android:layout_marginRight="11dp"
                android:textSize="13dp"
                android:textColor="#1a1a1a"
                android:text="如何查看会员卡的权益如何查看会员卡的权益"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/xianshi"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="【答】"
                android:textSize="15dp"
                android:textColor="#32b8e8"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="11dp"
                android:textSize="13dp"
                android:textColor="#999999"
                android:id="@+id/feedback_item_Method"
                android:text="如何查看会员卡的权益如何查看会员卡的权益如何查看会员卡的权益如何查看会员卡的权益"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/xianshi1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/timeout"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:textColor="#999999"
                android:layout_height="wrap_content"
                android:text="2017-10-30 14:24:20" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#ffffff"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/hedler_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/loc_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="3dp"
                    android:background="@mipmap/location_icon" />

                <TextView
                    android:id="@+id/cinema_name"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#161616"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="3dp" />

            </LinearLayout>


            <RadioGroup
                android:id="@+id/radio_layout"
                android:layout_width="135dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/now_showing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_left_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="正在热映"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text12"
                    android:textStyle="bold" />


                <RadioButton
                    android:id="@+id/next_showing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_right_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="即将上映"
                    android:textColor="#32b8b8"
                    android:textSize="@dimen/text12"
                    android:textStyle="bold" />

            </RadioGroup>

        </RelativeLayout>
    </LinearLayout>


    <com.myp.cinema.util.viewpager.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
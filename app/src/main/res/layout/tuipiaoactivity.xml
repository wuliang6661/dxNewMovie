<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"

    android:orientation="vertical">


    <include layout="@layout/header_layout02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/movies_img"
            android:layout_width="62dp"
            android:layout_height="87dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/zhanwei1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/ticketFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="123456789456789"
                    android:textColor="@color/text_small"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movies_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-06-02 20:00"
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/movies_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6排7座 6排8座"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/movies_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
            </LinearLayout>




        </LinearLayout>
</LinearLayout>
<LinearLayout
    android:background="#999999"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="退票信息"
            android:textColor="#E51C23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/act_bg01">
        <TextView
            android:id="@+id/texttt"
            android:layout_marginLeft="20dp"
          android:layout_centerVertical="true"
            android:text="手机号码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@+id/texttt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:background="#FFFFFF"

            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:text="13552008150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/act_bg01">
        <TextView
            android:id="@+id/textttA"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="退款金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@+id/textttA"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:background="#FFFFFF"

            >
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:text="26.80元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:text="提交退票"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/type_bg"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
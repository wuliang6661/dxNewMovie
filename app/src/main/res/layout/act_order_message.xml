<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">

    <include layout="@layout/header_layout02" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_top"
        android:paddingRight="@dimen/margin_top"
        android:paddingTop="10dp"
        android:scrollbars="none">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movies_img"
                    android:layout_width="62dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/zhanwei1"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="@dimen/margin_top"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/movies_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拆弹专家"
                            android:textColor="@color/text_big"
                            android:textSize="@dimen/text_big" />

                        <TextView
                            android:id="@+id/movies_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_top"
                            android:text="3D英语"
                            android:textColor="@color/text_small"
                            android:textSize="12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="影城："
                            android:textColor="@color/text_small"
                            android:textSize="@dimen/text_center" />


                        <TextView
                            android:id="@+id/movies_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="杭州滨文路德信影城 3号厅"
                            android:textColor="@color/text_big"
                            android:textSize="@dimen/text_center" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="场次："
                            android:textColor="@color/text_small"
                            android:textSize="@dimen/text_center" />

                        <TextView
                            android:id="@+id/movies_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016-06-02 20:00"
                            android:textColor="#e7271d"
                            android:textSize="@dimen/text_center" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="座位："
                            android:textColor="@color/text_small"
                            android:textSize="@dimen/text_center" />

                        <TextView
                            android:id="@+id/movies_seat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6排7座 6排8座"
                            android:textColor="@color/text_big"
                            android:textSize="@dimen/text_center" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_top"
                        android:layout_marginTop="@dimen/margin_top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数量："
                            android:textColor="@color/text_small"
                            android:textSize="@dimen/text_center" />

                        <TextView
                            android:id="@+id/movies_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/text_big"
                            android:textSize="@dimen/text_center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="@drawable/ddbj" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="@drawable/order_button_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/er"
                    android:layout_width="261dp"
                    android:layout_height="261dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/zhanwei1" />

                <TextView
                    android:id="@+id/collect_tickets1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="序列号：123456"
                    android:textColor="@color/text_big"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/collect_tickets2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="验证码：789411"
                    android:textColor="@color/text_big"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="tips:请到影院内自助取票机或影院前台取票"
                    android:textColor="#999999"
                    android:textSize="11dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="实付金额"
                        android:textColor="#1a1a1a"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/movies_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="120.00元"
                        android:textColor="#1a1a1a"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/meline">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="订单号："
                        android:textColor="@color/text_small"
                        android:textSize="@dimen/text_center" />

                    <TextView
                        android:id="@+id/order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1355555555555555"
                        android:textColor="@color/text_big"
                        android:textSize="@dimen/text_center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="手机号："
                        android:textColor="@color/text_small"
                        android:textSize="@dimen/text_center" />

                    <TextView
                        android:id="@+id/phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="145****6526"
                        android:textColor="@color/text_big"
                        android:textSize="@dimen/text_center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="下单时间："
                        android:textColor="@color/text_small"
                        android:textSize="@dimen/text_center" />

                    <TextView
                        android:id="@+id/pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-01-08 21：47:20"
                        android:textColor="@color/text_big"
                        android:textSize="@dimen/text_center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="影院地址"
                        android:textColor="#1a1a1a"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/meline">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/yingcheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="杭州滨江文耀店"
                        android:textColor="#1a1a1a"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/add_ress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="杭州滨江区滨文路422号文耀大厦三楼"
                        android:textColor="#666666"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="客服电话"
                        android:textColor="#1a1a1a"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/meline">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/startTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="工作时间：早09.00-晚22.00"
                                android:textColor="#666666"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="联系电话：400-118-118"
                                android:textColor="#666666"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="32dp"
                            android:background="#e5e5e5">

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/call_phone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/dianhuahua" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tuipiao"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_tuipiao"
                    android:gravity="center"
                    android:text="退票"
                    android:textColor="#999999"
                    android:textSize="15dp"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/movies_img"
            android:layout_width="78dp"
            android:layout_height="112dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/zhanwei1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="11dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="拆弹专家"
                    android:textColor="#161616"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/movies_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text=""
                    android:textColor="#eb5e3a"
                    android:textSize="@dimen/text15"
                    android:textStyle="italic" />


            </LinearLayout>


            <TextView
                android:id="@+id/moviesDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLength="15"
                android:singleLine="true"
                android:text="拆弹专家追击炸弹狂徒"
                android:textColor="#888888"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/moviesActors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="拆弹专家追击炸弹狂徒"
                android:textColor="#888888"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/moviesTypeOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2D"
                    android:textColor="#EA5B43"
                    android:textSize="11sp"
                    android:background="@drawable/movie_type_bg"
                    android:padding="3dp"/>

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/pay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/sell_btn"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

</LinearLayout>
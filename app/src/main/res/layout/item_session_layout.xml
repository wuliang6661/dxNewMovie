<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="@dimen/margin_top">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:50"
                android:textColor="#312927"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="20:16散场"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/submit_button"
            android:layout_width="51dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_yellow_buy"
            android:gravity="center"
            android:text="购票"
            android:textColor="#EA5B43"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/layoutR"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/submit_button"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="￥"
                    android:textColor="#E04F2E"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/movie_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#E04F2E"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/cinema_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#009FFF"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/time_layout"
            android:layout_toStartOf="@id/layoutR"
            android:layout_marginTop="21dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/movie_langvige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英语2D"
                    android:textColor="#312927"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/moives_type"
                    android:layout_width="49dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:background="@drawable/img_2d"
                    android:visibility="gone"/>

            </LinearLayout>


            <TextView
                android:id="@+id/movie_ting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="3号激光厅"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/time_layout"
            android:background="@color/line_bg" />


    </RelativeLayout>


</LinearLayout>
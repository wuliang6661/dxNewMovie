<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01">


    <LinearLayout
        android:id="@+id/buttom_tab"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">


        <com.xyz.tabitem.BottmTabItem
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xyzIcon="@mipmap/newmovie_no"
            app:xyzIconHeight="25dp"
            app:xyzIconWidth="25dp"
            app:xyzSelectIcon="@mipmap/newmovie_yes"
            app:xyzSelectState="true"
            app:xyzTitle="购票"
            app:xyzTitleColor="@color/text_style01"
            app:xyzTitleSelectColor="#EA5B43"
            app:xyzTitleSize="@dimen/text10"
            app:xyzTitleTop="5dp" />
        <com.xyz.tabitem.BottmTabItem
            android:id="@+id/product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xyzIcon="@mipmap/newproduct_no"
            app:xyzIconHeight="25dp"
            app:xyzIconWidth="25dp"
            app:xyzSelectIcon="@mipmap/newproduct_yes"
            app:xyzSelectState="false"
            app:xyzTitle="卖品"
            app:xyzTitleColor="@color/text_style01"
            app:xyzTitleSelectColor="#EA5B43"
            app:xyzTitleSize="@dimen/text10"
            app:xyzTitleTop="5dp" />


        <com.xyz.tabitem.BottmTabItem
            android:id="@+id/haoxiaoxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xyzIcon="@drawable/quanzi"
            app:xyzIconHeight="26dp"
            app:xyzIconWidth="26dp"
            app:xyzSelectIcon="@drawable/quanzixz"
            app:xyzSelectState="false"
            app:xyzTitle="福利"
            app:xyzTitleColor="@color/text_style01"
            app:xyzTitleSelectColor="#74c4e3"
            app:xyzTitleSize="@dimen/text10"
            app:xyzTitleTop="5dp"
            android:visibility="gone"/>

        <com.xyz.tabitem.BottmTabItem
            android:id="@+id/haowan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xyzIcon="@mipmap/newstore_no"
            app:xyzIconHeight="25dp"
            app:xyzIconWidth="25dp"
            app:xyzSelectIcon="@mipmap/newstore_yes"
            app:xyzSelectState="false"
            app:xyzTitle="商城"
            app:xyzTitleColor="@color/text_style01"
            app:xyzTitleSelectColor="#EA5B43"
            app:xyzTitleSize="@dimen/text10"
            app:xyzTitleTop="5dp"
            android:visibility="gone"/>

        <com.xyz.tabitem.BottmTabItem
            android:id="@+id/huiyuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xyzIcon="@mipmap/newmine_no"
            app:xyzIconHeight="25dp"
            app:xyzIconWidth="25dp"
            app:xyzSelectIcon="@mipmap/newmine_yes"
            app:xyzSelectState="false"
            app:xyzTitle="会员"
            app:xyzTitleColor="@color/text_style01"
            app:xyzTitleSelectColor="#EA5B43"
            app:xyzTitleSize="@dimen/text10"
            app:xyzTitleTop="5dp" />

    </LinearLayout>

    <View
        android:id="@+id/buttom_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/buttom_tab"
        android:background="#d9d9d9" />


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttom_top_line" />


</RelativeLayout>
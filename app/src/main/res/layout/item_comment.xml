<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_top"
            android:paddingRight="@dimen/margin_top"
            android:paddingTop="@dimen/margin_top">

            <com.hedgehog.ratingbar.RatingBar
                xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                hedgehog:clickable="false"
                hedgehog:halfstart="false"
                hedgehog:starCount="5"
                hedgehog:starEmpty="@drawable/hui"
                hedgehog:starFill="@drawable/liang"
                hedgehog:starHalf="@drawable/ban"
                hedgehog:starImageHeight="20dp"
                hedgehog:starImagePadding="6dp"
                hedgehog:starImageWidth="20dp" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top"
                android:text="7分，比较好"
                android:textColor="#eb5e3a"
                android:textSize="@dimen/text_small" />


        </LinearLayout>

        <TextView
            android:id="@+id/comment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_marginTop="@dimen/margin_top"
            android:text="还不错，值得看"
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_marginTop="@dimen/margin_top"
            android:background="#f5f5f5"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/movies_img"
                android:layout_width="57dp"
                android:layout_height="81dp"
                android:background="@drawable/zhanwei1"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_top">

                <TextView
                    android:id="@+id/movies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拆弹专家"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />


                <TextView
                    android:id="@+id/movies_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="拆弹专家追击炸弹狂徒"
                    android:textColor="@color/text_center"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:text="动作 惊悚 犯罪"
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:paddingLeft="@dimen/margin_top"
            android:paddingRight="@dimen/margin_top">


            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="刚刚"
                android:textColor="@color/text_style01"
                android:textSize="10dp" />

            <LinearLayout
                android:id="@+id/huifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/hf" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="回复"
                    android:textColor="@color/text_style01"
                    android:textSize="10dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text12"
                android:layout_toLeftOf="@+id/huifu"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/zan_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/myzan" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="赞"
                    android:textColor="@color/text_style01"
                    android:textSize="10dp" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/act_bg01" />
    </LinearLayout>
</LinearLayout>
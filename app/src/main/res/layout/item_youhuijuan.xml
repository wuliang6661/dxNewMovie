<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_marginRight="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/yiguoqi"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/youhuijuan_bg"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="bottom">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#eb5e3a"
                    android:textSize="27dp" />


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/youhui_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="元"
                    android:textColor="#eb5e3a"
                    android:textSize="15dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="购票"
                android:textColor="#eb5e3a"
                android:textSize="@dimen/text_center" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/youhui_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:text="现金代金券"
                android:textColor="#4c4c4c"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/youhui_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/youhui_type"
                android:layout_below="@+id/youhui_type"
                android:layout_marginTop="12dp"
                android:text="2017.2.10-2017.3.6"
                android:textColor="#808080"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/youhui_time"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/xian" />





        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg_white"
    android:orientation="vertical">

    <include layout="@layout/header_layout02" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_register_bg"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@drawable/zhanghu" />


        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@color/white"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textColor="@color/text_big"
            android:textColorHint="@color/text_style01"
            android:textSize="@dimen/text_big" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/edit_register_bg"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@drawable/yanzheng" />


            <EditText
                android:id="@+id/verification_edit"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:phoneNumber="true"
                android:textColor="@color/text_big"
                android:textColorHint="@color/text_style01"
                android:textSize="@dimen/text_big" />


        </LinearLayout>


        <Button
            android:id="@+id/get_verification"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_yello"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />

    </LinearLayout>
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_bule"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="16dp" />


</LinearLayout>